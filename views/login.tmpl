{{template "beginning" .}}
{{if .error}}
  <h1 style="color: red">{{.message}}</h1>
{{end}}
<form action="/login" method="POST">
  <input type="text" name="username" id="username">
  <input type="text" type="password" name="password" id="password">
  <button type="submit">Login</button>
</form>
{{template "end"}}